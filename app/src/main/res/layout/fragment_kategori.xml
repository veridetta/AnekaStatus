<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_utama"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mscroll"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:layout_marginBottom="@dimen/_6sdp"
                android:textSize="@dimen/_14sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_600"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/baper"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/green_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Baper"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/islami"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/orange_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Islami"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lucu"
                        android:alpha="0.5"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/yellow_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lucu"
                                    android:textColor="@color/black"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/meme"
                        android:alpha="0.5"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/red_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meme"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/motivasi"
                        android:alpha="0.5"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/blue_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Motivasi"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/remaja"
                        android:alpha="0.5"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/brown_400"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Remaja"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/romantis"
                        android:alpha="0.5"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_4sdp">
                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/blue_900"
                            app:cardCornerRadius="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Romantis"
                                    android:textColor="@color/white"
                                    android:minLines="1"
                                    android:maxLines="3"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/menampilkan"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menampilkan Kategori Baper"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:textSize="@dimen/_14sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_600"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/kosong"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada data"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_15sdp"/>
            </LinearLayout>
            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/sh_art"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_150sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/shimmer_artikel_list"/>
                    <include layout="@layout/shimmer_artikel_list"/>
                    <include layout="@layout/shimmer_artikel_list"/>
                    <include layout="@layout/shimmer_artikel_list"/>
                </LinearLayout>
            </io.supercharge.shimmerlayout.ShimmerLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ly_buton"
                android:paddingBottom="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_prev"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_4sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:text="Lebih Banyak"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/orange_200"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_4sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:text="Pos Terbaru"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>